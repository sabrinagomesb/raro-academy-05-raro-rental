<% content_for :titulo do %>
  <span>
    Novo cadastro de Usuario
  </span>
<% end %>

<div class="m-auto flex flex-col justify-between items-center bg-white shadow-lg rounded-lg overflow-hidden max-w-2xl p-4 mt-4">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="mt-6 grid grid-cols-2 gap-x-6 gap-y-8 sm:grid-cols-6">

      <div class="sm:col-span-3">
        <%= f.label :nome, class: input_label %>
        <div class="mt-2">
          <%= f.text_field :nome, class: input_text %>
        </div>
      </div>

      <div class="sm:col-span-3">
        <%= f.label :email, class: input_label %>
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_text %>
        </div>
      </div>

      <div class="sm:col-span-3">
        <%= f.label :foto, class: input_label %>
        <div class="mt-2">
          <%= f.text_field :foto, class: input_text %>
        </div>
      </div>

      <div class="sm:col-span-3">
        <div class="flex justify-between">
          <%= f.label :password, class: input_label %>
          <% if @minimum_password_length %>
            <em class="text-sm font-medium leading-6 text-gray-900">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "new-password", class: input_text %>
        </div>
      </div>

      <div class="sm:col-span-3">
        <%= f.label :password_confirmation, class: input_label %>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: input_text %>
        </div>
      </div>

      <% if current_usuario.root? %>
        <div class="mt-6 flex items-center justify-between sm:col-span-3">
          <div class="flex items-center">
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :root, class: input_checkbox %>
              <%= f.label "UsuÃ¡rio root?", class: 'ml-2 block text-sm text-gray-900' %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="actions w-100 flex justify-end mt-8">
      <%= f.submit "Cadastrar", class: btn_primary %>
    </div>
    <div class="rounded-md mt-4 p-4 text-red-500">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
  <% end %>
</div>
