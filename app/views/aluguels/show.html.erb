<% content_for :titulo do %>
  <span>
    Aluguel
  </span>
<% end %>

<% content_for :new_button do %>
  <%= link_to "Novo aluguel", new_cliente_path, class: btn_primary %>
<% end %>

<div class="m-auto flex flex-col justify-between items-center bg-white shadow-lg rounded-lg overflow-hidden max-w-xl p-6">

  <%= render @aluguel %>

  <div class="flex justify-evenly gap-4 mt-4">
    <%= link_to "Editar", edit_aluguel_path(@aluguel), class: btn_primary %>
    <%= button_to "Deletar", @aluguel, method: :delete, class: btn_danger, data: { confirm: "Tem certeza?", turbo_confirm: "Tem certeza que deseja deletar esse aluguel?" } %>
  </div>
  <%= link_to "Voltar para alugueis", aluguels_path, class: btn_simple %>
</div>
