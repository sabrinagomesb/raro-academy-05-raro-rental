<% content_for :titulo do %>
  <span>
    Veículo
  </span>
<% end %>

<% content_for :new_button do %>
  <%= link_to "Novo veículo", new_veiculo_path, class: btn_primary %>
<% end %>

<div class="m-auto flex flex-col justify-between items-center bg-white shadow-lg rounded-lg overflow-hidden max-w-xl p-6 mt-4">

  <%= render @veiculo %>

  <div class="flex justify-evenly gap-4 mt-4">
    <%= link_to "Editar", edit_veiculo_path(@veiculo), class: btn_primary %>
    <%= button_to "Deletar", @veiculo, method: :delete, class: btn_danger %>
  </div>
  <%= link_to "Voltar para veículos", veiculos_path, class: btn_simple %>
</div>
